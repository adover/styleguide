{
	"name": "styleguide",
	"version": "1.0.0",
	"description": "A port of my work on the WoolworthsNZ styleguide",
	"main": "index.js",
	"author": "Andy Dover",
	"license": "MIT",
	"private": true,
	"dependencies": {},
	"devDependencies": {
		"commitizen": "^4.1.2",
		"commitlint": "^9.1.0",
		"cz-conventional-changelog": "3.2.0",
		"glob": "^7.1.6",
		"husky": "^4.2.5",
		"jest": "^26.2.2",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"sass-true": "^6.0.0",
		"style-dictionary": "^2.10.1",
		"ts-node": "^8.10.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.scss": "stylelint --fix --syntax=scss",
		"*.format:write": "prettier --write",
		"*.ts": "prettier --write"
	},
	"scripts": {
		"commit": "git-cz"
	}
}
